{
   "compilerOptions": {
      "target": "es6",
      "lib": [
         "dom",
         "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "outDir": "esm",
      "declaration": true,
      "declarationDir": "esm",
      "removeComments": true
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules",
      "esm"
   ]
}